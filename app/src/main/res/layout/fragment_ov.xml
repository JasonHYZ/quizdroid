<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1e7e7"
    tools:context="edu.washington.yizhouh.quizdroid2.OvFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/ovfrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/to1"
            android:text="Topic Overview"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/to2"
            android:text="This is a quiz about math.You will need to do some simple calculations,like addition, subtraction and multiplication!"
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to3"
            android:text="This is a quiz about Physics.You will need to answer some simple questions,like the calculation of gravity and speed!"
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to4"
            android:text="This is a quiz about Marvel Super Heroes.You will need to answer some simple questions,like famous people and historical events!"
            android:textSize="20dp"
            android:layout_below="@+id/to1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/to5"
            android:text="Total Questions: 2"
            android:textSize="20dp"
            android:layout_below="@+id/to2"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/begin"
            android:text="Begin"
            android:textSize="30dp"
            android:background="#ffeb26"
            android:layout_below="@id/to5"
            android:layout_marginTop="250dip"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</FrameLayout>
